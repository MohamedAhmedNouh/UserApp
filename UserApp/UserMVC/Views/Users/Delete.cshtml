@model int
@{
    Layout = null;
}
<div class="modal fade bd-example-modal-md" id="ModalDelete" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title h4" >Are you sure you want to delete this user?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form form enctype="multipart/form-data" id="EditForm" asp-controller="Users" asp-action="Delete" asp-route-id="@Model" method="post">
                    <button class="btn btn-primary" id="DeleteUser" type="submit">Yes, Delete it</button>

                </form>
            </div>

        </div>
    </div>
</div>



